// Replace all the characters with * in the string
    #include <iostream>
#include <string>
using namespace std;

int main() {
    string input;  // Declare a string variable

    // Accept a string from the user
    cout << "Enter a string: ";
    getline(cin, input);  // Use getline to allow spaces in the string

    // Display the entered string
    cout << input << endl;

    
}
    for(int i=0; i<str.length(); i++){
        if(str[i] != ' '){
            str[i] = '*';
        }
    }
    cout<<"The string after replacing all characters with * is: "<<str<<endl;
}
}
